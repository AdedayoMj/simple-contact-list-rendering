{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "baseUrl": ".",
      "lib": ["es6", "dom"],
      "noImplicitAny": false,
      "noImplicitThis": true,
      "strictNullChecks": false,
      "declaration": true,
      "emitDeclarationOnly": true,
      "isolatedModules": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "paths": {
          "app/components": ["src/components"],
          "app/api": ["src/api"]
      }
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}